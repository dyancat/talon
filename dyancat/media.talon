media toggle:
	key(alt-')
	sleep(50ms)
	user.window_highlight()

media hop: key(alt-e)
media hop back: key(alt-a)

media skip: key(alt-shift-e)
media skip back: key(alt-shift-a)

media jump: key(alt-,)
media jump back: key(alt-o)

media chapter next: key(alt-shift-.)
media chapter last: key(alt-shift-')